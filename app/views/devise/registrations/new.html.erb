<div class="form-box col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">
  <h2>Sign up</h2>
  <br />
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-inputs">
      <%= f.input :username, autofocus: true %>
      <br />
      <%= f.input :email, autofocus: true %>
      <br />
      <%= f.input :password, autocomplete: "off", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <br />
      <%= f.input :password_confirmation, autocomplete: "off" %>
    </div>
    <br />
    <div class="form-actions">
      <%= f.button :submit, "Sign up", :class => 'btn btn-primary' %>
    </div>
  <% end %>
    <br />
  <%= render "devise/shared/links" %>
</div>